@model List<ConfigModel>
@{
    ViewData["Title"] = "Index";
}

<div class="row">
    <div class="col-sm-offset-1 col-sm-11">

        @if (Model.Count == 0)
        {
            <h2>The configuration could not be found!</h2>
        }
        else
        {
            <h3>@ViewData["Message"]</h3>
            <hr />

            <dl class="dl-horizontal">
                @foreach (var row in Model)
                {
                    <dt>
                        @Html.DisplayNameFor(model => row.ConfigName)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => row.ConfigName)
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(model => row.Value)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => row.Value)
                    </dd>
                    <dt>
                        Details:
                    </dt>
                    <dd>
                        @Html.ActionLink("Details", "Details", new { @row.Id })
                    </dd>
                    <hr />
                }
            </dl>
        }

    </div>
</div>