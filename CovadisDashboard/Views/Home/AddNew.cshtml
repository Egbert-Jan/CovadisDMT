@model CovadisDashboard.Models.FormModel;

@{
    ViewData["Title"] = "Add new check";
}

<div class="row">
    <div class="col-sm-offset-1 col-sm-11">

        <h2>@ViewData["Title"]</h2>
        <h3>@ViewData["Message"]</h3>
        <p>Please make sure you fill in a valid url and at least ONE element to check.</p>

        <div class="row">
            <div class="col-sm-8">
                <form asp-action="AddNew" asp-controller="Home">
                    <div class="form-group">
                        <label asp-for="Url"></label>
                        <input asp-for="Url" placeholder="Your url goes here..."
                               class="form-control" required/>
                    </div>
                    <div class="form-group">
                        <label asp-for="Element1"></label>
                        <input asp-for="Element1" placeholder="Your first element to check goes here..."
                               class="form-control" required />
                    </div>
                    <div class="form-group">
                        <label asp-for="Element2"></label>
                        <input asp-for="Element2" placeholder="Your second element to check goes here..."
                               class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Element3"></label>
                        <input asp-for="Element3" placeholder="Your third element to check goes here..." 
                               class="form-control" />
                    </div>
                    <input type="submit" />
                </form>
            </div>
            <div class="col-sm-4">
            </div>
        </div>
    </div>
</div>
